.side-chat
  .side-chat__header
    .side-chat__header__box
      %p.side-chat__header__box__name
        = current_user.name
      %ul.side-chat__header__box__menu
        %li.side-chat__header__box__menu__new-group
          = link_to new_group_path, class: "side-chat__header__box__menu__new-group__btn" do
            %i.far.fa-edit
            %span<>
        %li.side-chat__header__box__menu__setting
          = link_to edit_user_path(current_user) , class: "side-chat__header__box__menu__setting__btn" do
            %i.fas.fa-cog
            %span<>
  .side-chat__contents
    - current_user.groups.each do |group|
      .side-chat__contents__group
        = link_to "#" do
          .side-chat__contents__group__name
            = group.name
          .side-chat__contents__group__message
            text